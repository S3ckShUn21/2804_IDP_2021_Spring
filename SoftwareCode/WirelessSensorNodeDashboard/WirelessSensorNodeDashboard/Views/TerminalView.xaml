<UserControl x:Class="WirelessSensorNodeDashboard.Views.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WirelessSensorNodeDashboard.Views"
             
             xmlns:t="clr-namespace:Simple.Wpf.Terminal;assembly=Simple.Wpf.Terminal"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             
             xmlns:vm="clr-namespace:WirelessSensorNodeDashboard.ViewModels"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <vm:TerminalViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="TerminalScrollViewer" VerticalScrollBarVisibility="auto">
            <TextBlock  Grid.Row="0" Margin="5,5,5,0"
                    Text="{Binding Path=TerminalText, Mode=OneWay}"
                    TextWrapping="Wrap"
                    Background="LightGray"/>
        </ScrollViewer>

        <DockPanel Grid.Row="1" Margin="5">

            <Button DockPanel.Dock="Right"
                    Width="auto"
                    Content="I'm a send button"
                    Command="{Binding Path=LineEnteredCommand}"
                    CommandParameter="{Binding ElementName=InputTextbox, Path=Text}"/>

            <TextBox x:Name="InputTextbox"
                    Text="{Binding Path=InputText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Width="auto"
                    Margin="0,0,5,0" VerticalAlignment="Center">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" 
                                Command="{Binding Path=LineEnteredCommand}"
                                CommandParameter="{Binding ElementName=InputTextbox, Path=Text}"/>
                </TextBox.InputBindings>
            </TextBox>

        </DockPanel>

    </Grid>



