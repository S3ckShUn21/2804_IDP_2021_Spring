<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WirelessSensorNodeDashboard.Styles">

    <Style TargetType="TextBlock" x:Key="Title">
        <Setter Property="Foreground" Value="{StaticResource WSN_White}"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/fonts/#Source Sans Pro"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="Terminal">
        <Setter Property="Foreground" Value="{StaticResource WSN_Dark}"/>
        <Setter Property="Background" Value="{StaticResource WSN_Grey}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineStackingStrategy" Value="MaxHeight"/>
        <Setter Property="LineHeight" Value="5"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/fonts/#Source Sans Pro"/>
    </Style>

</ResourceDictionary>